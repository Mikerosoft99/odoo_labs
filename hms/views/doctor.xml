<odoo>
    <record id="view_doctor_form" model="ir.ui.view">
        <field name="name">hms.doctor.form</field>
        <field name="model">hms.doctor</field>
        <field name="arch" type="xml">
            <form string="Doctor">
                <sheet>
                    <group>
                        <group string="Name">
                            <field name="first_name"/>
                            <field name="last_name"/>
                        </group>
                        <group string="Image">
                            <field name="image" widget="image" options="{'preview_image': true}" width="100" height="100"/>
                        </group>
                    </group>
                    <group string="Patients">
                        <field name="patient_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_doctor_tree" model="ir.ui.view">
        <field name="name">hms.doctor.tree</field>
        <field name="model">hms.doctor</field>
        <field name="arch" type="xml">
            <tree string="Doctors">
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="image" widget="image" options="{'preview_image': true}" width="100" height="100"/>
                <field name="patient_ids"/>
            </tree>
        </field>
    </record>

    <record id="action_doctor_list" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="res_model">hms.doctor</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_doctor_tree"/>
    </record>

    <menuitem id="menu_item_doctor" parent="menu_doctor" name="Doctors" action="action_doctor_list"/>

</odoo>
