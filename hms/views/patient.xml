<odoo>
    <record id="view_patient_form" model="ir.ui.view">
        <field name="name">hms.patient.form</field>
        <field name="model">hms.patient</field>
        <field name="arch" type="xml">
            <form string="Patient">
                <header>
                    <button name="action_add_log" type="object" class="btn-primary mx-3" string="Add New Log"/>
                    <button name="action_undetermined" type="object" class="btn-secondary" string="Undetermined"/>
                    <button name="action_good" type="object" class="btn-success" string="Good"/>
                    <button name="action_fair" type="object" class="btn-warning" string="Fair"/>
                    <button name="action_serious" type="object" class="btn-danger" string="Serious"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group string="Personal Info">
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="birth_date"/>
                            <field name="image" widget="image" options="{'preview_image': true}" width="100"
                                   height="100"/>
                            <field name="age"/>
                            <field name="address"/>
                            <field name="email"/>
                        </group>
                        <group string="Medical Info">
                            <field name="history" invisible="age &lt; 50"/>
                            <field name="cr_ratio"/>
                            <field name="blood_type"/>
                            <field name="pcr"/>
                            <field name="department_id"/>
                            <field name="department_capacity"/>
                            <field name="doctor_ids"/>
                        </group>
                        <group string="History Logs">
                            <field name="log_ids">
                                <tree string="History">
                                    <field name="created_by"/>
                                    <field name="create_date"/>
                                    <field name="description"/>
                                </tree>
                            </field>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_patient_tree" model="ir.ui.view">
        <field name="name">hms.patient.tree</field>
        <field name="model">hms.patient</field>
        <field name="arch" type="xml">
            <tree string="Patients">
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="birth_date"/>
                <field name="email"/>
                <field name="cr_ratio"/>
                <field name="blood_type"/>
                <field name="pcr"/>
                <field name="address"/>
                <field name="age"/>
                <field name="department_id"/>
                <field name="doctor_ids"/>
                <field name="department_capacity"/>
                <field name="state" widget="badge"
                       decoration-primary="state == 'undetermined'"
                       decoration-success="state == 'good'"
                       decoration-warning="state == 'fair'"
                       decoration-danger="state == 'serious'"/>
            </tree>
        </field>
    </record>

    <record id="action_patient_list" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hms.patient</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_patient_tree"/>
    </record>

    <menuitem id="menu_item_patient" parent="menu_patient" name="Patients" action="action_patient_list"/>
</odoo>
