<odoo>
    <record id="view_patient_form" model="ir.ui.view">
        <field name="name">hms.patient.form</field>
        <field name="model">hms.patient</field>
        <field name="arch" type="xml">
            <form string="Patient">
                <header>
                    <field name="state" widget="statusbar" options="{'clickable': True}"/>
                </header>
                <sheet>
                    <group>
                        <group string="Personal Info">
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="birth_date"/>
                            <field name="image" widget="image" options="{'preview_image': true}" width="100"
                                   height="100"/>
                            <field name="age"/>
                            <field name="address"/>
                        </group>
                        <group string="Medical Info">
                            <field name="history"/>
                            <field name="cr_ratio"/>
                            <field name="blood_type"/>
                            <field name="pcr"/>
                            <field name="department_id"/>
                            <field name="department_capacity"/>
                            <field name="doctor_ids"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_patient_tree" model="ir.ui.view">
        <field name="name">hms.patient.tree</field>
        <field name="model">hms.patient</field>
        <field name="arch" type="xml">
            <tree string="Patients">
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="birth_date"/>
                <field name="history"/>
                <field name="cr_ratio"/>
                <field name="blood_type"/>
                <field name="pcr"/>
                <field name="address"/>
                <field name="age"/>
                <field name="department_id"/>
                <field name="doctor_ids"/>
                <field name="department_capacity"/>
                <field name="state" widget="badge"
                       decoration-primary="state == 'undetermined'"
                       decoration-success="state == 'good'"
                       decoration-warning="state == 'fair'"
                       decoration-danger="state == 'serious'"/>
            </tree>
        </field>
    </record>

    <record id="action_patient_list" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hms.patient</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_patient_tree"/>
    </record>

    <menuitem id="menu_item_patient" parent="menu_patient" name="Patients" action="action_patient_list"/>
</odoo>
