<odoo>
    <record id="group_user" model="res.groups">
        <field name="name">User</field>
    </record>

    <record id="group_manager" model="res.groups">
        <field name="name">Manager</field>
    </record>

    <record id="access_user_patients" model="ir.model.access">
        <field name="name">User Access to Patients</field>
        <field name="model_id" ref="model_hms_patient"/>
        <field name="group_id" ref="group_user"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    <record id="access_user_departments" model="ir.model.access">
        <field name="name">User Access to Departments</field>
        <field name="model_id" ref="model_hms_department"/>
        <field name="group_id" ref="group_user"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    <record id="access_user_doctors" model="ir.model.access">
        <field name="name">User Access to Doctors</field>
        <field name="model_id" ref="model_hms_doctor"/>
        <field name="group_id" ref="group_user"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="access_manager_patients" model="ir.model.access">
        <field name="name">Manager Access to Patients</field>
        <field name="model_id" ref="model_hms_patient"/>
        <field name="group_id" ref="group_manager"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
    <record id="access_manager_departments" model="ir.model.access">
        <field name="name">Manager Access to Departments</field>
        <field name="model_id" ref="model_hms_department"/>
        <field name="group_id" ref="group_manager"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
    <record id="access_manager_doctors" model="ir.model.access">
        <field name="name">Manager Access to Doctors</field>
        <field name="model_id" ref="model_hms_doctor"/>
        <field name="group_id" ref="group_manager"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

</odoo>
