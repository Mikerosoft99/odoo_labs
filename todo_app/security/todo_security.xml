<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Define access control rules -->
    <record id="access_todo_ticket_manager" model="ir.rule">
        <field name="name">Manager Access</field>
        <field name="model_id" ref="model_todo_ticket"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <record id="access_todo_ticket_user" model="ir.rule">
        <field name="name">User Access</field>
        <field name="model_id" ref="model_todo_ticket"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="0"/>
    </record>
</odoo>
