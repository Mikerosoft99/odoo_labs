<odoo>
    <!-- views -->
    <record id="todo_ticket_view" model="ir.ui.view">
        <field name="name">To Do Ticket Tree</field>
        <field name="model">todo.ticket</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="number"/>
                <field name="tag"/>
                <field name="state"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="view_todo_ticket_form" model="ir.ui.view">
        <field name="name">To Do Ticket</field>
        <field name="model">todo.ticket</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="number"/>
                    </group>
                    <group>
                        <field name="tag"/>
                        <field name="state"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="todo_ticket_kanban_view" model="ir.ui.view">
        <field name="name">To Do Ticket Kanban</field>
        <field name="model">todo.ticket</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_content">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_card">
                                    <div class="oe_kanban_card_content">
                                        <strong>
                                            <field name="name"/>
                                        </strong>
                                        <div>
                                            <field name="tag"/>
                                        </div>
                                        <div>
                                            <field name="description"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="todo_ticket_action" model="ir.actions.act_window">
        <field name="name">To Do Ticket</field>
        <field name="res_model">todo.ticket</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <menuitem id="menu_todo" name="todo"/>

    <menuitem id="menu_root_tickets" name="tickets" parent="menu_todo" action="todo_ticket_action"/>
</odoo>
