<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- views -->
    <record id="todo_ticket_view" model="ir.ui.view">
        <field name="name">To Do Ticket Tree</field>
        <field name="model">todo.ticket</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="number"/>
                <field name="tag"/>
                <field name="state"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="view_todo_ticket_form" model="ir.ui.view">
        <field name="name">To Do Ticket</field>
        <field name="model">todo.ticket</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="number"/>
                        <field name="tag"/>
                        <field name="state"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="todo_ticket_action" model="ir.actions.act.window">
        <field name="name">To Do Ticket</field>
        <field name="res_model">todo.ticket</field>
        <field name="view_mode">tree, form</field>
    </record>

    <menuitem id="menuitem_todo_app"
              name="tickets"
              parent="menu_root_tickets"
              action="todo_ticket_action"/>
</odoo>
